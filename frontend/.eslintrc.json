{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // Disable the no-console rule to allow console logs
    "no-console": "off",

    // Disable enforcement of formatting for multiline ternary expressions
    "multiline-ternary": "off",
    "indent": ["error", 2],   // Enforce 2 spaces for indentation
    "@typescript-eslint/explicit-module-boundary-types": "off" // Example for TypeScript-specific rules
  }
}
